---
layout: base.njk
title: "herramientas"
---

<!-- CSS específico para herramientas -->
<link rel="stylesheet" href="/css/tools.css">

<!-- Control Bar -->
<div class="catalog-controls">
  <div class="container">
    <div class="row g-2 align-items-center">
      <!-- Búsqueda -->
      <div class="col-md-5">
        <label class="form-label fw-semibold mb-1" style="font-size:0.85rem;">
          <i class="fas fa-search me-1"></i>Buscar productos
        </label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-search"></i></span>
          <input type="text" class="form-control" id="searchInput" placeholder="Buscar…">
          <button class="btn btn-outline-secondary" id="clearSearch">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>

      <!-- Rango de Precio -->
      <div class="col-md-3">
        <label class="form-label fw-semibold mb-1" style="font-size:0.85rem;">
          <i class="fas fa-dollar-sign me-1"></i>Rango de Precio
        </label>
        <div class="row g-1">
          <div class="col-6">
            <input type="number" class="form-control" id="minPrice" placeholder="Min" min="0">
          </div>
          <div class="col-6">
            <input type="number" class="form-control" id="maxPrice" placeholder="Max" min="0">
          </div>
        </div>
      </div>

      <!-- Ordenar -->
      <div class="col-md-4">
        <label class="form-label fw-semibold mb-1" style="font-size:0.85rem;">
          <i class="fas fa-sort me-1"></i>Ordenar por
        </label>
        <select class="form-select" id="sortBy">
          <option value="sku-asc">Nombre A-Z</option>
          <option value="sku-desc">Nombre Z-A</option>
          <option value="price-asc">Precio: Menor a Mayor</option>
          <option value="price-desc">Precio: Mayor a Menor</option>
        </select>
      </div>
    </div>

    <div class="results-info mt-2 d-flex justify-content-between align-items-center">
      <span class="text-muted">
        <i class="fas fa-layer-group me-1"></i>
        Mostrando <span id="productCount" class="fw-semibold">0</span> productos
      </span>
      <button class="btn btn-sm btn-outline-secondary" id="clearAllFilters">
        <i class="fas fa-eraser me-1"></i>Limpiar todos
      </button>
    </div>
  </div>
</div>

<div class="catalog-page">
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar con filtros -->
      <aside class="col-lg-3">
        <div class="filters-sidebar">
          <div class="sidebar-header d-flex justify-content-between align-items-center mb-3">
            <h3 class="sidebar-title mb-0">
              <i class="fas fa-filter me-2"></i>Filtros
            </h3>
            <button id="clearCategories" class="btn btn-sm btn-link p-0">
              Restablecer categorías
            </button>
          </div>

          <!-- Categorías -->
          <div class="filter-section mb-4">
            <h4
              class="filter-title d-flex justify-content-between align-items-center mb-2"
              data-bs-toggle="collapse"
              data-bs-target="#categoriesFilter"
              aria-expanded="true"
            >
              <span><i class="fas fa-tags me-2"></i>Categorías</span>
              <i class="fas fa-chevron-down"></i>
            </h4>
            <div class="collapse show" id="categoriesFilter">
              <div id="categoryFilters" class="filter-content">
                <!-- JS inyecta los checkboxes aquí -->
              </div>
            </div>
          </div>
        </div>
      </aside>

      <!-- Zona de productos -->
      <main class="col-lg-9">
        <div class="products-container">
          <!-- Loading State -->
          <div class="loading-state d-none text-center py-5">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Cargando...</span>
            </div>
          </div>

          <!-- Empty State -->
          <div class="empty-state d-none text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No se encontraron productos</h4>
          </div>

          <!-- Products Grid -->
          <div id="productsGrid" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <!-- JS inyecta las cards aquí -->
          </div>
        </div>
      </main>
    </div>
  </div>
</div>

<!-- Datos JSON -->
<script>window.TOOLS_DATA = {{ tools | dump | safe }};</script>

<!-- Script -->
<script src="/js/catalog-manager.js"></script>